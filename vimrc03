Plugin 'vim-scripts/vis'
Plugin 'ycm-core/YouCompleteMe'
Plugin 'chikamichi/mediawiki.vim'
call vundle#end()            " required
" Vundle -----------------------------------------------------------------------

" file type and syntax highlighting on
filetype plugin indent on
syntax on

" white spaces
autocmd ColorScheme * highlight ExtraWhitespace ctermbg=red guibg=red
highlight ExtraWhitespace ctermbg=cyan guibg=cyan
autocmd InsertLeave * redraw!
match ExtraWhitespace /\s\+$\| \+\ze\t/
autocmd BufWritePre * :%s/\s\+$//e

" color scheme
color molokai

" sessions
noremap <F1> :mksession! .vim.session <cr>
noremap <F2> :source .vim.session <cr>
noremap <F3> :! rm .vim.session <cr>
noremap <F4> :so ~/.vimrc<cr>
noremap <F5> :B !xargs -I {} realpath --relative-to \. {}<cr>
command -range RelativePathTo execute "!realpath --relative-to . " .  @*
" for auto read to auto load
au FocusGained,BufEnter * :silent! !
au FocusLost,WinLeave * :silent! w

" Spellchecking
set spell
setlocal spell spelllang=en_gb,de_de

" specific settings
set fo+=t
set t_Co=256
set nocursorline
set title
set bs=2
set noautoindent
set ruler
set shortmess=aoOTI
set nocompatible
set showmode
set splitbelow
set nomodeline
set showcmd
set showmatch
set tabstop=2
set shiftwidth=2
set expandtab
set cinoptions=(0,m1,:1
"set tw=80
set formatoptions=tcqro2
set smartindent
set laststatus=2
set nomodeline
set clipboard=unnamed
set softtabstop=2
set showtabline=1
set sidescroll=5
set scrolloff=4
set hlsearch
set incsearch
set ignorecase
set smartcase
set foldmethod=indent
set ttyfast
set history=10000
set hidden
set colorcolumn=81
set number
set complete=.,w,b,u,t
set completeopt=longest,menuone,preview
set noswapfile
set foldlevelstart=0
set foldlevel=99
set wildmenu
set wildmode=list:longest,full
set nowrap
set statusline=%{getcwd()}\/\%f%=%-14.(%l,%c%V%)\ %P
set autoread

" backup
set undodir=~/.vim/tmp/undo//
set backupdir=~/.vim/tmp/backup//
set directory=~/.vim/tmp/swap//
set undolevels=1000         " How many undos
set undoreload=10000        " number of lines to save for und

" make directories automatically if they don't already exist
if !isdirectory(expand(&undodir))
    call mkdir(expand(&undodir), "p")
endif
if !isdirectory(expand(&backupdir))
    call mkdir(expand(&backupdir), "p")
endif
if !isdirectory(expand(&directory))
    call mkdir(expand(&directory), "p")
endif

" close brackets
"":inoremap ( ()<Esc>i
"":inoremap < <><Esc>i
"":inoremap { {}<Esc>i
"":inoremap [ []<Esc>i
"":inoremap " ""<Esc>i
"":inoremap ' ''<Esc>i
"":inoremap ` ``<Esc>i


" Modify searching
set hlsearch
set ignorecase
set smartcase
set incsearch
nnoremap <silent> <C-l> :nohl<CR><C-l>
"Function for relative line numbering etc leader n

function! NumberToggle()
  if(&relativenumber == 1)
    set number
    set norelativenumber
  else
    set relativenumber
    set nonumber
  endif
endfunc

nnoremap <leader>n :call NumberToggle()<cr>

"Show leader and change leader
set showcmd
"let mapleader=","
map <Space> <Leader>

" moving up and down work as you would expect
nnoremap <silent> j gj
nnoremap <silent> k gk

" close NERDTree after a file is opened
let g:NERDTreeQuitOnOpen=0
" show hidden files in NERDTree
let NERDTreeShowHidden=1
" ignore pyc
let NERDTreeIgnore=['\.pyc$', '\~$'] "ignore files in NERDTree
" Toggle NERDTree
nnoremap <silent> <leader>k :NERDTreeToggle<cr>
" expand to the path of the file in the current buffer
nnoremap  <silent> <leader>y :NERDTreeFind<cr>
nnoremap <leader>s :w<cr>
:set list lcs=tab:\|\



" Gundo Mappings
nnoremap <leader>u :GundoToggle<CR>
" Gundo Mappings
nnoremap <leader>u :GundoToggle<CR>

" better key bindings for UltiSnipsExpandTrigger
let g:UltiSnipsExpandTrigger = "<tab>"
let g:UltiSnipsJumpForwardTrigger = "<tab>"
let g:UltiSnipsJumpBackwardTrigger = "<s-tab>"
let g:UltiSnipsSnippetDirectories = ['~/.vim/UltiSnips', 'UltiSnips']
let g:UltiSnipsEditSplit="vertical"
let g:UltiSnipsListSnippets = "<leader><tab>"
" Line numbering
set nu
" Remove highlight
nnoremap <silent> <C-l> :nohl<CR><C-l>

" Syntastic rnoweb Knitr support
let g:syntastic_rnoweb_checkers = ['tex/chktex', 'text/language_check', 'r/lintr']
let g:syntastic_text_language_check_args = '--language=en-US'
let g:syntastic_enable_r_lintr_checker = 1

"Language tools config"
let g:languagetool_jar='$HOME/LanguageTool-4.2/languagetool-commandline.jar'
let g:languagetool_lang='en-US'

"Vimtex pdf viewer Zathura
let g:vimtex_view_method = 'zathura'


" Extra Options for Autocompletion
let g:ycm_autoclose_preview_window_after_completion=1
map <leader>g :YcmCompleter GoToDefinitionElseDeclaration<CR>

" YCM compatible with NvimR
"let g:YcmShowDetailedDiagnostic = ""
noremap <leader>Ã¤ :YcmShowDetailedDiagnostic<CR>

" make YCM compatible with UltiSnips (using supertab)
let g:ycm_key_list_select_completion = ['<C-n>', '<Down>']
let g:ycm_key_list_previous_completion = ['<C-p>', '<Up>']
let g:SuperTabDefaultCompletionType = '<C-n>'

" better key bindings for UltiSnipsExpandTrigger
let g:UltiSnipsExpandTrigger = "<tab>"
let g:UltiSnipsJumpForwardTrigger = "<tab>"
let g:UltiSnipsJumpBackwardTrigger = "<s-tab>"
let g:UltiSnipsSnippetDirectories = ['~/.vim/UltiSnips', 'UltiSnips']
let g:UltiSnipsEditSplit="vertical"
let g:UltiSnipsListSnippets = "<leader><tab>"


"Function for relative line numbering etc leader n

function! NumberToggle()
  if(&relativenumber == 1)
    set number
    set norelativenumber
  else
    set relativenumber
    set nonumber
  endif
endfunc

nnoremap <leader>n :call NumberToggle()<cr>

"backspace fix
set backspace=2

" Show me the indentation level
:set list lcs=tab:\|\

" cursorline
au WinLeave * set nocursorline
au WinEnter * set cursorline
set cursorline

" add yaml stuffs
au! BufNewFile,BufReadPost *.{yaml,yml} set filetype=yaml foldmethod=indent
autocmd FileType yaml setlocal ts=2 sts=2 sw=2 expandtab

" PEP8 for Python
au BufNewFile,BufRead *.py
    \ set tabstop=4
    \| set softtabstop=4
    \| set shiftwidth=4
    \| set textwidth=79
    \| set expandtab
    \| set autoindent
    \| set fileformat=unix

" Full stack HTML
au BufNewFile,BufRead *.js, *.html, *.css
    \ set tabstop=2
    \| set softtabstop=2
    \| set shiftwidth=2
